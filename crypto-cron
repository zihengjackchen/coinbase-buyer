# crypto-cron
# Run the script daily at 2 AM UTC
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Run the Python script daily at 2 AM UTC
0 2 * * * printenv | grep -E "API_KEY|API_SECRET" > /tmp/cron_env && source /tmp/cron_env && python /app/main.py >> /var/log/cron.log 2>&1
