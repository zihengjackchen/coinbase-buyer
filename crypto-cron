# crypto-cron
# Run the script daily at 2 AM UTC
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Run the script every minute
* * * * * /bin/bash -c ". /etc/environment && echo \"API_KEY=\$API_KEY, API_SECRET=\$API_SECRET\" >> /var/log/cron.log && python /app/main.py >> /var/log/cron.log 2>&1"
